@{
    ViewData["Title"] = "Send Email";
    Layout = "~/Views/Shared/_LayoutRegistration.cshtml";
}
@model PizzaShop.Data.Models.Account


<div class="d-flex w-100" style="min-height: 100vh;">
    <div class="h-100 w-50 hero-image-section">
        <div class="w-100 custom-image">
            <img src="~/images/dominos_background.jpg" class="img-fluid h-100 w-100 object-fit-cover" alt="">
        </div>
    </div>
    <div class="w-50 custom-form-section">
        <div class="h-100 w-100 align-middle d-flex flex-column justify-content-center align-items-start">
            <div class="w-100 company-logo d-flex justify-content-center">
                <img src="~/images/logos/pizzashop_logo.png" class="img-fluid w-25" alt="">
                <div class="h-100 company-name">
                    <p>&nbsp;PIZZASHOP</p>
                </div>
            </div>
            <div class="heading">
                <h1 class="display-6">Forgot Password.</h1>
                <p>Enter you email, We will send resent password link to your entered email</p>
            </div>
            <form method="post" asp-action="SendEmail" asp-controller="Authentication" class="w-100" id="emailForm">
                @Html.AntiForgeryToken()
                <div class="mb-1">
                    <div class="input-group custom-field bg-white border-0">
                        <input class="form-control bg-white border-0" type="email" class="form-control" id="email"
                            name="email" value="@ViewBag.Email" required />
                        <span class="input-group-text bg-white border-0">
                            <img src="~/images/user-solid.svg" alt="">
                        </span>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                    @* <span id="emailNotValidMessage" class="text-danger"></span> *@
                </div>
                <div class="submit-btn w-100">
                    <button type="submit" class="btn btn-primary w-100">Send</button>
                </div>
                <div class="form-check text-center">
                    <a asp-action="Login" asp-controller="Home" class="text-decoration-none">Back to Login!</a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
