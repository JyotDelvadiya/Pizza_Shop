<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PizzaShop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PizzaShop.styles.css" asp-append-version="true" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
</head>

<body onload="toggleMenuForBigScreen()">
    <div class="container-fluid m-0 p-0">
        <div class="row m-0">
            <div class="col-auto sidebar sticky-top text-center p-0">
                <div class="offcanvas offcanvas-start" style="width: 250px; z-index: 999;" data-bs-scroll="true"
                    data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling"
                    aria-labelledby="offcanvasScrollingLabel">
                    <button type="button" class="btn-close mt-3 ms-3" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                    <div class="offcanvas-header pl-3 py-1">
                        <div class="offcanvas-title customLogo pt-1 d-flex w-75 " id="offcanvasWithBothOptionsLabel">
                            <img src="~/images/logos/pizzashop_logo.png" class="w-50 object-fit-cover" alt="">
                            <p class="logoName">PIZZASHOP</p>
                        </div>
                    </div>
                    <div class="offcanvas-body px-0">
                        <ul class="nav flex-column bg-white">
                            <!-- Dashboard -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2 active" aria-current="page"
                                    asp-action="Index" asp-controller="Home">
                                    <!-- <img class="normal-icon" src="./assets/images/dashboard-default.svg"
                                        alt="Dashboard Icon" style="max-height: 20px; display: none;">
                                    <img class="active-icon" src="./assets/images/dashboard-active.svg"
                                        alt="Dashboard Active Icon" style="max-height: 20px;"> -->
                                    Dashboard
                                </a>
                            </li>
                            <!-- Analysis -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" asp-action="UserList"
                                    asp-controller="Home">
                                    <!-- <img class="normal-icon" src="./assets/images/graph-default.svg" alt="Analysis Icon"
                                        style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/graph-active.svg"
                                        alt="Analysis Active Icon" style="max-height: 20px; display: none;"> -->
                                    Users
                                </a>
                            </li>
                            <!-- Inbox -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" asp-action="Roles"
                                    asp-controller="Home">
                                    <!-- <img class="normal-icon" src="./assets/images/inbox-default.svg" alt="Inbox Icon"
                                        style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/inbox-active.svg"
                                        alt="Inbox Active Icon" style="max-height: 20px; display: none;"> -->
                                    Roles and Permissions
                                </a>
                            </li>
                            <!-- History -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" href="./menu.html">
                                    <!-- <img class="normal-icon" src="./assets/images/clock-default.svg" alt="History Icon"
                                        style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/clock-active.svg"
                                        alt="History Active Icon" style="max-height: 20px; display: none;"> -->
                                    Menu
                                </a>
                            </li>
                            <!-- Users -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" href="#">
                                    <!-- <img class="normal-icon" src="./assets/images/user-default.svg" alt="Users Icon"
                                        style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/user-active.svg"
                                        alt="Users Active Icon" style="max-height: 20px; display: none;"> -->
                                    Table and section
                                </a>
                            </li>
                            <!-- Maintenance -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" href="#">
                                    <!-- <img class="normal-icon" src="./assets/images/maintenance-default.svg"
                                        alt="Maintenance Icon" style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/maintenance-active.svg"
                                        alt="Maintenance Active Icon" style="max-height: 20px; display: none;"> -->
                                    Taxes and Fees
                                </a>
                            </li>
                            <!-- Setting -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" href="#">
                                    <!-- <img class="normal-icon" src="./assets/images/setting-default.svg"
                                        alt="Setting Icon" style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/setting-active.svg"
                                        alt="Setting Active Icon" style="max-height: 20px; display: none;"> -->
                                    Orders
                                </a>
                            </li>
                            <!-- Setting -->
                            <li class="nav-item">
                                <a class="nav-link c-side d-flex align-items-center gap-2" href="#">
                                    <!-- <img class="normal-icon" src="./assets/images/setting-default.svg"
                                        alt="Setting Icon" style="max-height: 20px;">
                                    <img class="active-icon" src="./assets/images/setting-active.svg"
                                        alt="Setting Active Icon" style="max-height: 20px; display: none;"> -->
                                    Customers
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>


            </div>
            <div class="col p-0 right-container w-100">
                <div class="header d-flex flex-row sticky-top w-100">
                    <button
                        class="btn toggle p-0 d-flex flex-row align-items-center justify-content-start px-3 text-white "
                        type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling"
                        aria-controls="offcanvasScrolling" onclick="toggleMenu()"><i class="bi bi-list"
                            id="menu-toggle"></i></button>
                    <div class="d-flex flex-row align-items-center justify-content-end w-100">
                        <div class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-black mt-2 d-flex align-items-center" href="#"
                                role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="@(string.IsNullOrEmpty(ViewBag.Profileimage) ? "/images/Default_pfp.svg.png" : ViewBag.Profileimage)"
                                        class="rounded-circle object-fit-cover me-2" alt="Profile Image" width="40"
                                        height="40">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-light " aria-labelledby="navbarDropdown">
                                <li class="px-3 d-flex align-items-center w-100">
                                    <img src="@(string.IsNullOrEmpty(ViewBag.Profileimage) ? "/images/Default_pfp.svg.png" : ViewBag.Profileimage)"
                                        class="rounded-circle object-fit-cover me-2" alt="Profile Image" width="40"
                                        height="40">
                                    <a class="dropdown-item text-black p-0 w-100 text-wrap overflow-hidden">@ViewBag.UserName</a>
                                </li>
                                <hr class="my-2">
                                <li><a class="dropdown-item text-black" asp-action="MyProfile"
                                        asp-controller="Home">Edit Profile</a></li>
                                <li><a class="dropdown-item text-black" asp-action="ChangePassword"
                                        asp-controller="Home">Change Password</a></li>
                                <li>
                                    <hr class="dropdown-divider text-black">
                                </li>
                                <li>
                                    <button class="dropdown-item text-danger">
                                        Log Out
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="dashboardContent">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
